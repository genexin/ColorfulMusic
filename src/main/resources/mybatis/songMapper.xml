<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.xidian.cs.cm.mapper.SongMapper">
	
	<resultMap type="Song" id="songResultMap">
		<id property="id" column="song_id" />
		<result property="title" column="song_title" />
		<result property="url" column="song_url" />
		<result property="emotion" column="emotion" />
		<result property="singerId" column="singer_id" />
		<result property="albumId" column="album_id" />
	</resultMap>
	<select id="getSong" parameterType="Integer" resultType="Song" resultMap="songResultMap">
		<![CDATA[ SELECT song_id, song_title, song_url, emotion, singer_id, album_id FROM songs WHERE song_id=#{id} ]]>
	</select>
	
	<select id="getSongs" resultType="Song" resultMap="songResultMap">
		<![CDATA[ SELECT song_id, song_title, song_url, emotion, singer_id, album_id FROM songs LIMIT #{0},#{1} ]]>
	</select>
</mapper>